---
import Layout from "../layouts/Layout.astro"
import CategoryBanner from "../components/Category_banner.astro";
import bg from '../assets/contacto/contactobg.png';

const title = "Contacto - Industrias Polyvac";
const description = "Pagina donde se muestra Información de contacto y ubicación";
---

<Layout title={title} description={description}>
    <CategoryBanner imageUrl={bg} titulo="Contacto y nuestra Ubicación"/>
    
    <!-- Contenido principal -->
    <div class="font-fuenteprincipal">
        
        <!-- Mapa de ubicación -->
        <section class="py-16 bg-gray-50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                
                <div class="bg-white  shadow-lg overflow-hidden">
                    <div class="grid lg:grid-cols-3">
                        <!-- Información de contacto adicional -->
                        <div class="bg-azulprimario text-white p-8 lg:p-12">
                            <h3 class="text-2xl font-bold mb-6">Información de Contacto</h3>
                            
                            <div class="space-y-6">
                                <!-- Dirección -->
                                <div class="flex items-start space-x-4">
                                    <svg class="w-6 h-6 text-white mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                                    </svg>
                                    <div>
                                        <h4 class="font-semibold mb-1">Dirección</h4>
                                        <p class="text-blue-100">Luis Pasteur No. 60</p>
                                        <p class="text-blue-100">Complejo Industrial Cuamatla</p>
                                        <p class="text-blue-100">Cuautitlán Izcalli, Estado de México</p>
                                        <p class="text-blue-100">C.P. 54730</p>
                                    </div>
                                </div>
                                
                                <!-- Teléfono -->
                                <div class="flex items-start space-x-4">
                                    <svg class="w-6 h-6 text-white mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                                    </svg>
                                    <div>
                                        <h4 class="font-semibold mb-1">Teléfonos</h4>
                                        <a href="tel:+525559543369" class="text-blue-100 hover:text-white transition-colors block">
                                            +52 (55) 5954-3369
                                        </a>
                                        <a href="tel:+525530161549" class="text-blue-100 hover:text-white transition-colors block">
                                            +52 (55) 3016-1549
                                        </a>
                                        <a href="tel:+525552961504" class="text-blue-100 hover:text-white transition-colors block">
                                            +52 (55) 5296-1504
                                        </a>
                                    </div>
                                </div>
                                
                                <!-- Email -->
                                <div class="flex items-start space-x-4">
                                    <svg class="w-6 h-6 text-white mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                    </svg>
                                    <div>
                                        <h4 class="font-semibold mb-1">Email</h4>
                                        <a href="mailto:pedidos@polyvac.com" class="text-blue-100 hover:text-white transition-colors">
                                            pedidos@polyvac.com
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Mapa -->
                        <div class="lg:col-span-2 h-96 lg:h-auto min-h-[400px]">
                            <iframe 
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3757.3238617798693!2d-99.19039442475732!3d19.656183781671498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1f587be9a2725%3A0xd7d4d961da5fcee6!2sINDUSTRIAS%20POLYVAC%20S.A.%20DE%20C.V.!5e0!3m2!1sen!2smx!4v1751316594642!5m2!1sen!2smx"
                                width="100%" 
                                height="100%" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade"
                                class="w-full h-full"
                            ></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Formulario de Contacto -->
        <section class="py-16 bg-gray-50">
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Formulario centrado -->
                <div class="bg-white p-8 md:p-12  shadow-lg">
                    <div class="text-center mb-8">
                        <h2 class="text-4xl font-bold text-azulprimario mb-4">Contáctanos</h2>
                        <p class="text-gray-600 text-lg">
                            Estamos aquí para ayudarte. Completa el formulario y nos pondremos en contacto contigo lo antes posible.
                        </p>
                    </div>
                    
                    <form class="space-y-6">
                        <!-- Primera fila: Nombre y Apellido -->
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
                                    Nombre
                                </label>
                                <input 
                                    type="text" 
                                    id="firstName" 
                                    name="firstName"
                                    placeholder="Ingresa tu nombre"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-azulprimario focus:border-azulprimario outline-none transition-colors"
                                >
                            </div>
                            <div>
                                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
                                    Apellido
                                </label>
                                <input 
                                    type="text" 
                                    id="lastName" 
                                    name="lastName"
                                    placeholder="Ingresa tu apellido"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-azulprimario focus:border-azulprimario outline-none transition-colors"
                                >
                            </div>
                        </div>
                        
                        <!-- Segunda fila: Email y Teléfono -->
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                    Correo electrónico
                                </label>
                                <input 
                                    type="email" 
                                    id="email" 
                                    name="email"
                                    placeholder="ejemplo@correo.com"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-azulprimario focus:border-azulprimario outline-none transition-colors"
                                >
                            </div>
                            <div>
                                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                                    Número de teléfono
                                </label>
                                <input 
                                    type="tel" 
                                    id="phone" 
                                    name="phone"
                                    placeholder="+52 55 1234 5678"
                                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-azulprimario focus:border-azulprimario outline-none transition-colors"
                                >
                            </div>
                        </div>
                        
                        <!-- Mensaje -->
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                                Tu mensaje
                            </label>
                            <textarea 
                                id="message" 
                                name="message" 
                                rows="6"
                                placeholder="Escribe tu mensaje aquí..."
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-azulprimario focus:border-azulprimario outline-none transition-colors resize-none"
                            ></textarea>
                        </div>
                        
                        
                        <!-- Botón -->
                        <div class="text-center">
                            <button 
                                type="submit"
                                class="bg-azulprimario text-white px-8 py-3 font-medium hover:bg-blue-700 transition-colors focus:ring-2 focus:ring-azulprimario focus:ring-offset-2 outline-none"
                            >
                                Enviar mensaje
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        
    </div>
</Layout>
