---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Recuperar Contraseña - Polyvac">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-2">Recuperar Contraseña</h1>
        <p class="text-gray-600">Ingresa tu email para recibir instrucciones</p>
      </div>

      <!-- Formulario de solicitud -->
      <form id="forgot-password-form" class="space-y-4">
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="tu@email.com"
          />
        </div>

        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200"
        >
          Enviar Instrucciones
        </button>
      </form>

      <!-- Mensaje de éxito -->
      <div id="success-message" class="hidden mt-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md">
        <p class="text-sm"></p>
      </div>

      <!-- Mensaje de error -->
      <div id="error-message" class="hidden mt-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-md">
        <p class="text-sm"></p>
      </div>

      <!-- Formulario de reseteo (oculto inicialmente) -->
      <div id="reset-form-container" class="hidden mt-6">
        <hr class="my-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">Resetear Contraseña</h2>
        <p class="text-gray-600 mb-4">¿Recibiste el código? Úsalo para crear una nueva contraseña.</p>
        
        <form id="reset-password-form" class="space-y-4">
          <div>
            <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
              Código de Reseteo
            </label>
            <input
              type="text"
              id="code"
              name="code"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Ingresa el código del email"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Nueva Contraseña
            </label>
            <input
              type="password"
              id="password"
              name="password"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Mínimo 8 caracteres"
            />
          </div>

          <div>
            <label for="passwordConfirmation" class="block text-sm font-medium text-gray-700 mb-2">
              Confirmar Contraseña
            </label>
            <input
              type="password"
              id="passwordConfirmation"
              name="passwordConfirmation"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Repite la contraseña"
            />
          </div>

          <button
            type="submit"
            class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200"
          >
            Cambiar Contraseña
          </button>
        </form>
      </div>

      <div class="mt-6 text-center">
        <a href="/cuenta" class="text-blue-600 hover:text-blue-800 text-sm">
          ← Volver al inicio de sesión
        </a>
      </div>
    </div>
  </main>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const forgotForm = document.getElementById('forgot-password-form');
    const resetForm = document.getElementById('reset-password-form');
    const successMessage = document.getElementById('success-message');
    const errorMessage = document.getElementById('error-message');
    const resetContainer = document.getElementById('reset-form-container');

    // Función para mostrar mensajes
    function showMessage(type, message) {
      const messageEl = type === 'success' ? successMessage : errorMessage;
      const otherEl = type === 'success' ? errorMessage : successMessage;
      
      messageEl.querySelector('p').textContent = message;
      messageEl.classList.remove('hidden');
      otherEl.classList.add('hidden');
      
      // Scroll hacia el mensaje
      messageEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }

    function hideMessages() {
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');
    }

    // Manejar solicitud de reseteo
    forgotForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      hideMessages();

      const email = document.getElementById('email').value;
      const submitBtn = forgotForm.querySelector('button[type="submit"]');
      
      submitBtn.disabled = true;
      submitBtn.textContent = 'Enviando...';

      try {
        const result = await window.polyvacAuth.requestPasswordReset(email);
        showMessage('success', result.message);
        
        // Mostrar formulario de reseteo
        resetContainer.classList.remove('hidden');
        
      } catch (error) {
        showMessage('error', error.message);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Enviar Instrucciones';
      }
    });

    // Manejar reseteo de contraseña
    resetForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      hideMessages();

      const code = document.getElementById('code').value;
      const password = document.getElementById('password').value;
      const passwordConfirmation = document.getElementById('passwordConfirmation').value;
      const submitBtn = resetForm.querySelector('button[type="submit"]');

      // Validar que las contraseñas coincidan
      if (password !== passwordConfirmation) {
        showMessage('error', 'Las contraseñas no coinciden');
        return;
      }

      // Validar longitud mínima
      if (password.length < 8) {
        showMessage('error', 'La contraseña debe tener al menos 8 caracteres');
        return;
      }
      
      submitBtn.disabled = true;
      submitBtn.textContent = 'Cambiando...';

      try {
        const result = await window.polyvacAuth.resetPassword(code, password, passwordConfirmation);
        showMessage('success', 'Contraseña cambiada exitosamente. Serás redirigido...');
        
        // Redirigir después de 2 segundos
        setTimeout(() => {
          window.location.href = '/';
        }, 2000);
        
      } catch (error) {
        showMessage('error', error.message);
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Cambiar Contraseña';
      }
    });

    // Verificar si hay código en la URL (si vienen del email)
    const urlParams = new URLSearchParams(window.location.search);
    const resetCode = urlParams.get('code');
    
    if (resetCode) {
      document.getElementById('code').value = resetCode;
      resetContainer.classList.remove('hidden');
      resetContainer.scrollIntoView({ behavior: 'smooth' });
    }
  });
</script>
